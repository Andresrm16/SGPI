@model SGPI_Andres.Models.Usuario

@{
    ViewData["Title"] = "ModificarUsuario";
    Layout = "_LayoutSGPI";
}
<br />
<style>
    body {
        background: #DCDDDF
    }
</style>
<form action="" class="form-inline justify-content-center">
    <!--menu-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Menú</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/BuscarUsuario">Buscar Usuario </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Administrador/CrearUsuario">Crear Usuario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/EliminarUsuario">Eliminar Usuario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/ModificarUsuario">Modificar Usuario</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Administrador/Reportes">Reportes</a>
                </li>
            </ul>
            <div style="text-align:right">
                <a href="/Administrador/Login" id="regresar">Cerrar Sesión</a>
            </div>
        </div>
    </nav>
</form>
<h1 align="center">Modificar Usuario</h1>
<!--Creo la columnas-->
<div class="container text-center">
    <div class="row align-items-start">
        <form method="post">
        <div class="col">
            <!--Aca agregamos el select-->
            
            
            
            <label>Tipo de Documento</label>
            <br />
            @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new{@class="form-control dropdown"})
            <br />


            <label>Rol</label>
            <br />
            @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "Rol1"), new{@class="form-control dropdown"})
            <br />


            <label>Programa</label>
            <br />
            @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"), new{@class="form-control dropdown"})
            <br />


            <label>Género</label>
            <br />
            @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"), new{@class="form-control dropdown"})
            <br />
        </div>




        <div class="col">
            <label>Numero de Documento</label>
            <br />
            <input asp-for="NumeroDocumento" type="text" class="form-control col-sm-12" id="numerodocumentousuariotxt" required />
            <br />
            <label>Correo Electronico</label>
            <input asp-for="Email" type="text" class="form-control col-sm-12" id="correoelectronicousuariotxt" required />


        </div>
        <div class="col">
            <label>Primer Nombre</label>
            <br />
            <input asp-for="PrimerNombre" type="text" class="form-control col-sm-12" id="primernombreusuariotxt" required />
            <br />
            <label>Primer Apellido</label>
            <br />
            <input asp-for="PrimerApellido" type="text" class="form-control col-sm-12" id="PrimerApellidousuariotxt" required />

        </div>
        <div class="col">
            <label>Segundo Nombre</label>
            <br />
            <input asp-for="SegundoNombre" type="text" class="form-control col-sm-12" id="Segundonombreusuariotxt" required />
            <br />
            <label>Segundo Apellido</label>
            <br />
            <input asp-for="SegundoApellido" type="text" class="form-control col-sm-12" id="segundoApellidousuariotxt" required />
            <br />
            <br />

            <label>Contraseña</label>
            <br />
            <input asp-for="Password" type="password" class="form-control col-sm-12" id="passwordtxt" required />
            <br />


            <button type="submit" class="btn btn-outline-primary" id="crearbtn">Modificar Usuario </button>

            </div>
        </form>
    </div>
</div>



