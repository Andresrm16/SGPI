<!--Columnas-->



<form method ="post" action ="">
<div class="container text-center">
    <div class="row align-items-start">
        <div class="col">


            <label>Tipo de Documento</label>
            <br />
            @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new{@class="form-control dropdown"})
            <br />


            <label>Rol</label>
            <br />
            @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "Rol1"), new{@class="form-control dropdown"})
            <br />



            <label>Programa</label>
            <br />
            @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"), new{@class="form-control dropdown"})
            <br />


            <label>Género</label>
            <br />
            @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"), new{@class="form-control dropdown"})
        </div>



        <div class="col">
            <label>Número de Documento</label>
            
            <br />
            <input asp-for="NumeroDocumento" type="text" class="form-control col-sm-12" id="numerodocumentousuariotxt" required />
            
            <br />
            <label>Correo Electronico</label>
            <input asp-for="Email" type="email" class="form-control col-sm-12" id="correoelectronicousuariotxt" required />


        </div>
        <div class="col">
            <label>Primer Nombre</label>
            <br />
            <input asp-for="PrimerNombre" type="text" class="form-control col-sm-12" id="primernombreusuariotxt" required />
            <br />
            <label>Primer Apellido</label>
            <br />
            <input asp-for="PrimerApellido" type="text" class="form-control col-sm-12" id="PrimerApellidousuariotxt" required />

        </div>
        <div class="col">
            <label>Segundo Nombre</label>
            <br />
            <input asp-for="SegundoNombre" type="text" class="form-control col-sm-12" id="Segundonombreusuariotxt" required />
            <br />
            <label>Segundo Apellido</label>
            <br />
            <input asp-for="SegundoApellido" type="text" class="form-control col-sm-12" id="segundoApellidousuariotxt" required />
            <br />
            <br />
            
            <label>Contraseña</label>
            <br />
            <input asp-for="Password" type="password" class="form-control col-sm-12" id="password" required />
            <br />

            @if (ViewBag.mensaje != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.mensaje
                    </div>
            }


            <button type="submit" class="btn btn-secondary btn-lg" id="crearbtn" >Crear Usuario</button>

        </div>

    </div>
</div>
</form>


