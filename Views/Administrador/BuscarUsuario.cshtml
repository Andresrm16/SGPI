@model SGPI_Andres.Models.Usuario
@{
    ViewData["Title"] = "BuscarUsuario";
    Layout = "_LayoutSGPI";

}
<br />
<style>
    body {
        background: #DCDDDF
    }
</style>
<form action="" class="form-inline justify-content-center">
        <!--menu-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Menú</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/BuscarUsuario">Buscar Usuario </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Administrador/CrearUsuario">Crear Usuario </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/EliminarUsuario">Eliminar Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/ModificarUsuario">Modificar Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Administrador/Reportes">Reportes</a>
                    </li>
                </ul>
                <div style="text-align:right">
                    <a href="/Administrador/Login" id="regresar">Cerrar Sesión</a>
                </div>
            </div>
        </nav>
</form>


<form method="post"> 
<h1 align="center">Buscar Usuario</h1>
<div class="input-group">
    <br />
    &nbsp; &nbsp; &nbsp; <input asp-for="NumeroDocumento" type="text" placeholder="Ingrese el documento de identidad" class="form-control col-sm-4" id="buscarusuariotxt" required />&nbsp;&nbsp;&nbsp
    <button type="submit" class="btn btn-primary mb-3" href="img/search.png">Buscar</button>&nbsp;&nbsp;
</div>

    @if (Model != null)
    {
        <table class="table table-bordered table-striped" style="background-color: ghostwhite">
            <thead>
                <tr class="odd">
                    <th> @Html.DisplayNameFor(model=>model.PrimerNombre)</th>
                    <th> @Html.DisplayNameFor(model=>model.SegundoNombre)</th>
                    <th> @Html.DisplayNameFor(model=>model.PrimerApellido)</th>
                    <th> @Html.DisplayNameFor(model=>model.SegundoApellido)</th>
                    <th> @Html.DisplayNameFor(model=>model.Email)</th>
                </tr>
            </thead>
        
        <tbody>
            <tr class="even">
                <th> @Html.DisplayFor(modelitem=>modelitem.PrimerNombre)</th>
                <th> @Html.DisplayFor(modelitem=>modelitem.SegundoNombre)</th>
                <th> @Html.DisplayFor(modelitem=>modelitem.PrimerApellido)</th>
                <th> @Html.DisplayFor(modelitem=>modelitem.SegundoApellido)</th>
                <th> @Html.DisplayFor(modelitem=>modelitem.Email)</th>
                <td>@Html.ActionLink("ModificarUsuario","ModificarUsuario", new {IdUsuario=Model.IdUsuario})</td>
                <td>@Html.ActionLink("EliminarUsuario","EliminarUsuario", new{IdUsuario=Model.IdUsuario}, 
                new{onclick="return confirm('¿Estás seguro de eliminarlo?')"})</td>
                <td>@Html.ActionLink("CrearUsuario","CrearUsuario", new{IdUsuario=Model.IdUsuario})</td>

                
            </tr>
        </tbody>
        
       
        </table>
        <button type="submit" class="btn btn-primary mb-3">Enviar</button>
    }
</form>

